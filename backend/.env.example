# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=canteen_management
DB_CONNECTION_LIMIT=10

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# UPI Payment Configuration
# Replace with your actual UPI merchant details
UPI_MERCHANT_ID=merchant@upi
UPI_MERCHANT_NAME=Canteen Management System
UPI_MERCHANT_CODE=1234

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Email Configuration (Optional - for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@canteenmanagement.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Receipt Configuration
RECEIPT_LOGO_URL=https://your-domain.com/logo.png
COMPANY_NAME=Your Institution Name
COMPANY_ADDRESS=Your Institution Address
COMPANY_PHONE=+91-80-12345678
COMPANY_EMAIL=contact@yourinstitution.edu

# QR Code Configuration
QR_CODE_SIZE=200
QR_CODE_MARGIN=2

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_EXPIRES_HOURS=24

# Tax Configuration
DEFAULT_TAX_RATE=0.05
CGST_RATE=0.025
SGST_RATE=0.025

# Order Configuration
DEFAULT_PICKUP_DELAY_MINUTES=30
MAX_PICKUP_DELAY_HOURS=4
AUTO_CANCEL_ORDER_HOURS=2